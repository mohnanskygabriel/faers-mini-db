<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQLDialect </property>
        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver</property>
        <property name="hibernate.connection.url">
            jdbc:postgresql://192.168.0.17:5432/faersdb</property>
        <property name="hibernate.connection.username">faers</property>
        <property name="hibernate.connection.password">mnhb2016</property>
        <property name="hibernate.hbm2ddl.auto">create-drop</property>   
        <property name="show_sql">false</property>
        <mapping class="com.globallogic.faers.event.Drug" />
        <mapping class="com.globallogic.faers.event.Event" />
        <mapping class="com.globallogic.faers.event.Meta" />
        <mapping class="com.globallogic.faers.event.OpenFDA" />
        <mapping class="com.globallogic.faers.event.Patient" />
        <mapping class="com.globallogic.faers.event.PatientDeath" />
        <mapping class="com.globallogic.faers.event.PrimarySource" />
        <mapping class="com.globallogic.faers.event.Reaction" />
        <mapping class="com.globallogic.faers.event.Receiver" />
        <mapping class="com.globallogic.faers.event.ReportDuplicate" />
        <mapping class="com.globallogic.faers.event.Result" />
        <mapping class="com.globallogic.faers.event.Results" />
        <mapping class="com.globallogic.faers.event.Sender" />    
    </session-factory>
</hibernate-configuration>
