<?xml version="1.0" encoding="utf-8"?>
<!DOCTYPE hibernate-configuration SYSTEM 
"http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="hibernate.dialect">
            org.hibernate.dialect.PostgreSQLDialect </property>
        <property name="hibernate.connection.driver_class">
            org.postgresql.Driver</property>
        <property name="hibernate.hbm2ddl.auto">create</property>
        <property name="show_sql">false</property>
        <property name="hibernate.connection.provider_class">org.hibernate.c3p0.internal.C3P0ConnectionProvider</property>
        <property name="hibernate.c3p0.min_size">5</property>
        <property name="hibernate.c3p0.max_size">30</property>
        <property name="hibernate.c3p0.timeout">300</property>
        <property name="hibernate.c3p0.max_statements">50</property>
        <property name="hibernate.auto_close_session">false</property>
        <property name="hibernate.c3p0.acquireRetryAttempts">60</property>
        <mapping class="com.globallogic.faers.json.Drug" />
        <mapping class="com.globallogic.faers.json.Event" />
        <mapping class="com.globallogic.faers.json.Meta" />
        <mapping class="com.globallogic.faers.json.OpenFDA" />
        <mapping class="com.globallogic.faers.json.Patient" />
        <mapping class="com.globallogic.faers.json.PatientDeath" />
        <mapping class="com.globallogic.faers.json.PrimarySource" />
        <mapping class="com.globallogic.faers.json.Reaction" />
        <mapping class="com.globallogic.faers.json.Receiver" />
        <mapping class="com.globallogic.faers.json.ReportDuplicate" />
        <mapping class="com.globallogic.faers.json.Result" />
        <mapping class="com.globallogic.faers.json.Results" />
        <mapping class="com.globallogic.faers.json.Sender" />    
    </session-factory>
</hibernate-configuration>
