<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="INFO">
    <Appenders>        
        <Console name="ConsoleInfo" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="NEUTRAL"/>          
            </Filters>
            <PatternLayout pattern="%-5level %d{dd-MM-yyyy HH:mm:ss} %msg%n"/>
        </Console>     
        <Console name="ConsoleWarning" target="SYSTEM_OUT">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%-5level %d{dd-MM-yyyy HH:mm:ss} [%l] %msg%n"/>
        </Console>   
        <RollingFile name="RollingFileWARN" fileName="logs/app-last" filePattern="logs/app-%d{dd-MM-yyyy}-%i.log">
            <Filters>
                <ThresholdFilter level="WARN" onMatch="ACCEPT" onMismatch="DENY"/>
            </Filters>
            <PatternLayout pattern="%-5level %d{dd-MM-yyyy HH:mm:ss} [%l] %msg%n"/>
            <OnStartupTriggeringPolicy />
        </RollingFile>
        <RollingFile name="RollingFileINFO" fileName="logs/app-last" filePattern="logs/app-%d{dd-MM-yyyy}-%i.log">
            <Filters>
                <ThresholdFilter level="INFO" onMatch="ACCEPT" onMismatch="DENY"/>   
                <ThresholdFilter level="WARN" onMatch="DENY" onMismatch="NEUTRAL"/>    
            </Filters>
            <PatternLayout pattern="%-5level %d{dd-MM-yyyy HH:mm:ss} %msg%n"/>
            <OnStartupTriggeringPolicy />
        </RollingFile>
    </Appenders>

    <Loggers> 
        <Root level="INFO">
            <AppenderRef ref="ConsoleInfo"/>
            <AppenderRef ref="ConsoleWarning"/>
            <AppenderRef ref="RollingFileWARN"/> 
            <AppenderRef ref="RollingFileINFO"/> 
        </Root>
    </Loggers>
</Configuration>